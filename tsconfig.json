{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES5",
    "lib": ["ES6"],
    "module": "commonjs",
    "rootDir": "./src",
    "allowJs": true,
    "outDir": "build",

    /* Type Checking */
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
